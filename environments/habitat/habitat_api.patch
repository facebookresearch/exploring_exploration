+            valid_idx2 = np.logical_and(y_idx >= 0, y_idx < im_map.shape[1])
+            valid_idx = np.logical_and(valid_idx1, valid_idx2)
+            im_map[x_idx[valid_idx], y_idx[valid_idx]] = value
