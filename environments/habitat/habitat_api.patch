+        self._config = config
+        self.current_episode_id = None
+        self.seen_objects = set()
+        self.seen_categories = set()
+        self.IGNORE_CLASSES = [
+            "floor",
+            "wall",
+            "door",
+            "misc",
+            "ceiling",
+            "void",
+            "stairs",
+            "railing",
+            "column",
+            "beam",
+            "",
