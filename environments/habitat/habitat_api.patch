+                self.seen_objects.add(obj_id)
+                self.seen_categories.add(obj_name)
+                if size_class == 0:
+                    self._metric["small_objects_visited"] += 1.0
+                elif size_class == 1:
+                    self._metric["medium_objects_visited"] += 1.0
+                else:
+                    self._metric["large_objects_visited"] += 1.0
